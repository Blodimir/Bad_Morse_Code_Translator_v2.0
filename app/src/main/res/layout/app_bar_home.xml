<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.admin.morsecodetranslator.Home">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/ToolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_home"
        android:id="@+id/workspace_home" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FAB"
        android:layout_width="@dimen/dimenFloatingActionButtonLayoutWidth"
        android:layout_height="@dimen/dimenFloatingActionButtonLayoutHeight"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/dimenFloatingActionButtonLayoutMargin"
        android:src="@drawable/ic_fab"
        android:longClickable="true" />

</android.support.design.widget.CoordinatorLayout>
